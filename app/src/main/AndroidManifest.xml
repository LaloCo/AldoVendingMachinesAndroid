<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tsool.appvending">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/vendingmachine"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".AddMachine"
            android:screenOrientation="portrait"/>
        <activity android:name=".Warehouse"
            android:screenOrientation="portrait"/>
        <activity android:name=".Snacks1"
            android:screenOrientation="portrait"/>
        <activity android:name=".Snacks2"
            android:screenOrientation="portrait"/>
        <activity android:name=".Coffee"
            android:screenOrientation="portrait"/>
        <activity android:name=".AddProduct"
            android:screenOrientation="portrait"/>
        <activity android:name=".AddWareHouseProduct"
            android:screenOrientation="portrait"/>
        <activity android:name=".EditWareHouseProduct"
            android:screenOrientation="portrait"/>
        <activity android:name=".AddProductCoffee"
            android:screenOrientation="portrait"></activity>
    </application>

</manifest>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.tsool.appvending.AddWareHouseProduct">

    <android.support.design.widget.TextInputLayout
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <EditText android:id="@+id/etxNameProduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:hint="Nombre"
            android:inputType="textPersonName" android:maxLines="1"
            android:singleLine="true"
            android:background="@drawable/borde" />

    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <EditText android:id="@+id/etxAvailability"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:hint="Cantidad disponible"
            android:inputType="numberDecimal" android:maxLines="1"
            android:singleLine="true"
            android:background="@drawable/borde" />

    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <EditText android:id="@+id/etxUnitName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:hint="Unidad de medida (Kg, L, Bolsas, ...)"
            android:inputType="text" android:maxLines="1"
            android:singleLine="true"
            android:background="@drawable/borde" />

    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <EditText android:id="@+id/etxAvailabilityAlert"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:hint="Alerta de disponibilidad (muestra en rojo el item)"
            android:inputType="numberDecimal" android:maxLines="1"
            android:singleLine="true"
            android:background="@drawable/borde" />

    </android.support.design.widget.TextInputLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Tipo de producto"
        android:textSize="12dp"
        android:textColor="@color/forest"/>

    <Spinner
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/borde"
        android:layout_marginBottom="10dp"
        android:entries="@array/ProductKind"
        android:id="@+id/spKindProduct" />

    <android.support.design.widget.TextInputLayout
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <EditText android:id="@+id/etxPurchasePrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:hint="Precio de compra"
            android:inputType="numberDecimal" android:maxLines="1"
            android:singleLine="true"
            android:background="@drawable/borde" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/tilPrecioSnack"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="fill_parent"
        android:visibility="invisible"
        android:layout_height="wrap_content">

        <EditText android:id="@+id/etxPrecioSnack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:hint="Precio de venta"
            android:inputType="numberDecimal" android:maxLines="1"
            android:singleLine="true"

            android:background="@drawable/borde" />

    </android.support.design.widget.TextInputLayout>

</LinearLayout>
